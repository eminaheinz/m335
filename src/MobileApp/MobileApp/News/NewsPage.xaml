<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobileApp.News.NewsPage"
             Title="News">
    <ScrollView>
        <StackLayout>
            <Frame Margin="10" CornerRadius="10" HasShadow="True" BackgroundColor="White">
                <StackLayout>
                    <Image Source="lachs.png" Aspect="AspectFill" HeightRequest="200" />
                    <Label x:Name="newsHeadlineLabel" FontSize="24" FontAttributes="Bold" Margin="10,0,10,0" />
                    <Label x:Name="newsContentLabel" Margin="10,0,10,0" />
                    <Label x:Name="newsDateLabel" FontSize="12" Margin="10,10,10,0" TextColor="Gray" />
                </StackLayout>
            </Frame>
            <Frame Margin="10" CornerRadius="10" HasShadow="True" BackgroundColor="White">
                <StackLayout>
                    <Image Source="veggiburger.png" Aspect="AspectFill" HeightRequest="200" Margin="10,10,10,0" />
                    <Label  x:Name="newsBurgerHeadlineLabel" FontSize="24" FontAttributes="Bold" Margin="10,0,10,0" />
                    <Label  x:Name="newsBurgerContentLabel" Margin="10,0,10,0" />
                    <Label  x:Name="newsBugerDateLabel" FontSize="12" Margin="10,10,10,0" TextColor="Gray" />
                </StackLayout>
            </Frame>
        </StackLayout>
    </ScrollView>
</ContentPage>